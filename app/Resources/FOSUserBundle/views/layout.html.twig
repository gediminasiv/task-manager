{% extends '::base.html.twig' %}

{% block title %}
BRIS | Login
{% endblock %}

{% block content %}
       <div class="login-container">

            <div class="login-header login-caret">

                <div class="login-content" style="width:100%;">

                    <p class="description">
                    <h2 style="color:#cacaca; font-weight:100;">
                        BRIS
                    </h2>
                    </p>
                </div>

            </div>

            <div class="login-progressbar">
                <div></div>
            </div>

            <div class="login-form">

                <div class="login-content">
                    {% if error %}
                        <div class="form-login-error" style="display: block;">
                            <h3>{{ 'invalid_login'|trans }}</h3>
                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">

                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="entypo-user"></i>
                                </div>

                                <input type="text" value="{{ last_username }}" class="form-control" name="_username" id="email" placeholder="{{ 'email'|trans }}" autocomplete="off" data-mask="email" />
                            </div>

                        </div>

                        <div class="form-group">

                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="entypo-key"></i>
                                </div>

                                <input type="password" class="form-control" name="_password" id="_password" placeholder="{{ 'password'|trans }}" autocomplete="off" />
                            </div>

                        </div>

                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'remember_me'|trans }}</label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-login">
                                <i class="entypo-login"></i>
                                {{ 'login'|trans }}
                            </button>
                        </div>

                    </form>

                </div>

            </div>

        </div>
{% endblock %}
