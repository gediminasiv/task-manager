<div class="sidebar-menu">
    <header class="logo-env" >

        <!-- logo -->
        <div class="logo" style="">
            <a href="http://bris.lt/">
                <img src="/uploads/logo.png"  style="max-height:60px;"/>
            </a>
        </div>

        <!-- logo collapse icon -->
        <div class="sidebar-collapse" style="">
            <a href="#" class="sidebar-collapse-icon with-animation">

                <i class="entypo-menu"></i>
            </a>
        </div>

        <!-- open/close menu icon (do not remove if you want to enable menu on mobile devices) -->
        <div class="sidebar-mobile-menu visible-xs">
            <a href="#" class="with-animation">
                <i class="entypo-menu"></i>
            </a>
        </div>
    </header>
    <div class="sidebar-user-info">

        <div class="sui-normal">
            <a href="#" class="user-link">
                <img src="/uploads/user.jpg" alt="" class="img-circle" style="height:44px;">

                <span>{{ 'welcome'|trans }},</span>
                <strong>{{ app.user.firstName }} {{ app.user.lastName }}</strong>
            </a>
        </div>

        {% if app.user.hasRole('ROLE_ADMIN') %}
        <div class="sui-hover inline-links animate-in">
{#             <a href="{{ path('edit_profile') }}">
                <i class="entypo-pencil"></i>
                {{ 'edit_profile'|trans }}
            </a> #}

            <a href="{{ path('change_password') }}">
                <i class="entypo-lock"></i>
                {{ 'change_password'|trans }}
            </a>

            <span class="close-sui-popup">Ã—</span>
        </div>
        {% endif %}
    </div>


    <div style="border-top:1px solid rgba(135,135,136,0.2);"></div>
    <ul id="main-menu" class="">
        {% if app.user.hasRole('ROLE_ADMIN') %}
        {#
        <li id="search">
            <form action="#" method="post" accept-charset="utf-8">
                <input id="search_input" type="text" name="search_key" class="search-input" placeholder="{{ 'search'|trans }} ..."/>
                <button type="submit">
                    <i class="entypo-search"></i>
                </button>
            </form>
        </li>
        #}
            <!-- DASHBOARD -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'dashboard' or app.request.attributes.get('_route')|split('_')[0] == 'task' ? 'active' }}">
                <a href="{{ path('dashboard') }}">
                    <i class="entypo-gauge"></i>
                    <span>{{ 'dashboard'|trans }}</span>
                </a>
            </li>

            <!-- MY TASKS -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'my' ? 'active' }}">
                <a href="{{ path('my_tasks') }}">
                    <i class="entypo-flash"></i>
                    <span>{{ 'my_tasks'|trans }}</span>
                </a>
            </li>

            <!-- CALENDAR -->
            <li class="{{ app.request.attributes.get('_routes')|split('_')[0] == 'calendar' ? 'active' }}">
                <a href="{{ path('calendar_list') }}">
                    <i class="entypo-calendar"></i>
                    <span>{{ 'calendar'|trans }}</span>
                </a>
            </li>

            <!-- MANAGE CLIENTS AND COMPANY -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'client' ? 'active' }}">
                <a href="{{ path('client_list') }}">
                    <i class="entypo-trophy"></i>
                    <span>{{ 'clients'|trans }}</span>
                </a>
            </li>

            <!-- MANAGE TEAM MEMBERS -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'user' ? 'active' }}">
                <a href="{{ path('user_list') }}">
                    <i class="entypo-users"></i>
                    <span>{{ 'team'|trans }}</span>
                </a>
            </li>

            <!-- MANAGE CLIENT PROJECTS -->

            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'project' ? 'active' }}">
                <a href="{{ path('project_list') }}">
                    <i class="entypo-paper-plane"></i>
                    <span>{{ 'projects'|trans }}</span>
                </a>
            </li>

            <!-- REPORTS -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'reports' ? 'active' }}">
                <a href="{{ path('reports_list') }}">
                    <i class="entypo-doc-text"></i>
                    <span>{{ 'reports'|trans }}</span>
                </a>
            </li>

            <!-- REPORT GENERATION -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'generate' ? 'active' }}">
                <a href="{{ path('generate_invoice_list') }}">
                    <i class="entypo-palette"></i>
                    <span>{{ 'report_generation'|trans }}</span>
                </a>
            </li>

            <!-- ARCHIVES -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'archive' ? 'active' }}">
                <a href="{{ path('archive_list') }}">
                    <i class="entypo-archive"></i>
                    <span>{{ 'archives'|trans }}</span>
                </a>
            </li>

            <!-- SETTINGS -->
            {% if app.user.hasRole('ROLE_SUPER_ADMIN') %}
                <li class="has-sub root-level">
                    <a href="#">
                        <i class="entypo-tools"></i>
                        <span>{{ 'settings'|trans }}</span>
                    </a>
                    <ul>
                        <li><a href="{{ path('change_password') }}">{{ 'change_password'|trans }}</a></li>
                        <li><a href="{{ path('change_timeout_values') }}">{{ 'change_timeout_value'|trans }}</a></li>
                    </ul>
                </li>
            {% endif %}
        {% else %}
            <!-- DASHBOARD -->
            <li class="{{ app.request.attributes.get('_route')|split('_')[0] == 'dashboard' or app.request.attributes.get('_route')|split('_')[0] == 'task' ? 'active' }}">
                <a href="{{ path('dashboard') }}">
                    <i class="entypo-gauge"></i>
                    <span>{{ 'tasks'|trans }}</span>
                </a>
            </li>
        {% endif %}

        <li class="">
            <a href="{{ path('logout') }}">
                <i class="entypo-logout"></i>
                <span>{{ 'logout'|trans }}</span>
            </a>
        </li>
    </ul>

</div>
